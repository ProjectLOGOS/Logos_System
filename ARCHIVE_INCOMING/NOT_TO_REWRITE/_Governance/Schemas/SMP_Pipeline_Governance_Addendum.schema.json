{
  "schema_name": "SMP_Pipeline_Governance_Addendum",
  "derives_from": "complete multi-modal SMP pipeline",
  "scope": "verification_and_normalization_only",
  "non_goals": [
    "runtime_execution",
    "protocol_activation",
    "authority_escalation"
  ],
  "hash_lifecycle": {
    "candidate_hash": {
      "description": "Pre-TLM integrity hash",
      "includes": [
        "logos_reconstruction",
        "agent_annotations",
        "triune_results",
        "3OT_trace",
        "evidence_refs"
      ],
      "excludes": [
        "tlm_signature"
      ]
    },
    "final_hash": {
      "description": "Post-TLM sealed hash",
      "includes": [
        "candidate_hash",
        "tlm_signature"
      ],
      "immutability": "absolute"
    }
  },
  "agent_verification_semantics": {
    "allowed_results": [
      "PASS",
      "FAIL",
      "ABSTAIN"
    ],
    "abstain_constraints": {
      "requires_reason_code": true,
      "max_abstains_allowed": 1,
      "mandatory_pass_lenses": [
        "SCP"
      ],
      "fail_closed_on_excess_abstain": true
    },
    "fail_rule": "any_FAIL_halts_pipeline",
    "enrichment_protocols": {
      "classification": "peer",
      "members": [
        "SCP",
        "MTP",
        "ARP"
      ],
      "authority": "none",
      "notes": [
        "All enrichment protocols are advisory",
        "ABSTAIN is a valid outcome for all enrichment protocols",
        "No enrichment protocol is required for admissibility"
      ]
    }
  },
  "mode_gating": {
    "P1_active": {
      "memory_writes": "forbidden",
      "learning": "forbidden"
    },
    "P2_passive": {
      "memory_writes": "conditional",
      "learning": "permitted_if_authorized"
    },
    "learning_trigger_constraint": "learning_may_only_execute_outside_P1"
  },
  "cognitive_state_alignment": {
    "protocol": "Cognitive_State_Protocol",
    "access_model": {
      "LOGOS_AGENT": "read_write",
      "I1": "read_only",
      "I2": "read_only",
      "I3": "read_only",
      "SOP": "forbidden",
      "external": "forbidden"
    },
    "hash_gate": "session_id + logos_agent_id + agent_id"
  },
  "evidence_refs": {
    "type": "array",
    "items": {
      "evidence_id": "stable_identifier",
      "source_class": [
        "USER",
        "TOOL",
        "INTERNAL"
      ],
      "capture_timestamp": "iso8601",
      "artifact_hash": "sha256",
      "authority": "none"
    },
    "governance_rule": "evidence_is_non_authoritative"
  },
  "logos_synthesis_authority": {
    "decision_maker": "LOGOS",
    "enrichment_role": "informational_only",
    "admissibility": "logos_only"
  }
}