{
  "contract": "Passive Runtime Initialization Execution Contract",
  "status": "AUTHORITATIVE \u00b7 NON-BYPASSABLE",
  "phase": "Spine-Step-4",
  "scope": "Passive (P2) internal initialization only; prepares for P1 override boundary",
  "ordering_guarantee": [
    "LOGOS_AGENT_READY",
    "PHASE_G_COMPLETE",
    "PHASE_H_COMPLETE",
    "PHASE_I_ROUTING_CONTRACT_READY",
    "PASSIVE_RUNTIME_INITIALIZATION"
  ],
  "mode_semantics": {
    "P2_passive": {
      "allowed": true,
      "user_interaction": "forbidden",
      "external_io": "forbidden",
      "priority": "P2",
      "purpose": [
        "initialize passive containers",
        "prepare SMP processing substrate",
        "prepare memory rehydration substrate",
        "prepare audit/logging substrate"
      ]
    }
  },
  "identity_invariants": {
    "identity_state": "FROZEN",
    "explicit_prohibitions": [
      "identity_issuance",
      "identity_derivation",
      "identity_rebinding",
      "hash_rotation",
      "authority_escalation"
    ]
  },
  "permissions": {
    "LOGOS_AGENT": [
      "initialize_passive_containers",
      "invoke_routing_surfaces (Phase-I) in passive mode only",
      "read_write Cognitive_State_Protocol (as previously governed)",
      "emit_audit_events"
    ],
    "I1_I2_I3": [
      "read_only Cognitive_State_Protocol",
      "produce_enrichment_deltas when invoked by LOGOS routing only"
    ],
    "SOP": [
      "diagnostics_only (airlocked)",
      "no access to Cognitive_State_Protocol",
      "no agent interaction"
    ]
  },
  "explicit_prohibitions": [
    "protocol_activation",
    "protocol_activation (beyond previously authorized readiness)",
    "agent_execution autonomy",
    "learning",
    "memory_write_by_non_logos",
    "external_io",
    "user_interaction",
    "agent_to_agent messaging"
  ],
  "smp_alignment": {
    "governing_schema": "SMP_Pipeline_Governance_Addendum.schema.json",
    "governing_policy": "SMP_Pipeline_Governance_Addendum.policy.json",
    "rule": "All passive initialization that touches governed artifacts must remain SMP-constrained."
  },
  "switch_boundary_preparation": {
    "intent": "Prepare for later P2\u2192P1 priority switch without implementing it here",
    "requirements_for_future_step": [
      "P2 tasks must be pausable",
      "P2 state must be checkpointable (metadata-only at this phase)",
      "P2 logs must be distinct from P1 logs"
    ],
    "prohibitions_now": [
      "do_not_implement_switch_logic",
      "do_not_pause_or_resume_tasks (no tasks should be active beyond initialization)",
      "do_not_accept_user_input"
    ]
  },
  "filesystem_constraints": {
    "write_scope": "Logos_System_Rebuild",
    "violation": "immediate_halt"
  },
  "failure_semantics": {
    "mode": "FAIL_CLOSED",
    "on_violation": [
      "halt_execution",
      "emit_audit_event",
      "discard_partial_init_state"
    ]
  },
  "p1_transition_note": "P1 activation is governed by a later spine step (Active Interaction Priority Switch)."
}