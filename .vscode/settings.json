{
    "files.exclude": {
        "**/*.vo": true,
        "**/*.vok": true,
        "**/*.vos": true,
        "**/*.aux": true,
        "**/*.glob": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.crswap": true,
        "**/*.pyc": true,
        "**/__pycache__/**": true,
        "external/Logos_AGI/.venv/**": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/_build/**": true,
        "**/dist/**": true,
        "**/node_modules/**": true,
        "**/.opam/**": true,
        "**/.coq/**": true,
        "**/canonical_coq/**": true,
        "**/canonical_coq_backup*/**": true,
        "**/archive_excluded/**": true,
        "**/backups/**": true,
        "**/__pycache__/**": true,
        "**/external/**": true,
        "**/*.pyc": true,
        "**/*.vo": true,
        "**/*.vok": true,
        "**/*.vos": true,
        "**/logs/**": true,
        "**/sandbox/**": true,
        "**/pxl_logos-agi-safety-demonstration/**": true,
        "external/Logos_AGI/.venv/**": true
    },
    "search.exclude": {
        "**/_build/**": true,
        "**/node_modules/**": true,
        "**/.opam/**": true,
        "**/canonical_coq/**": true,
        "**/canonical_coq_backup*/**": true,
        "**/archive_excluded/**": true,
        "**/backups/**": true,
        "**/__pycache__/**": true,
        "**/external/**": true,
        "**/*.pyc": true,
        "**/logs/**": true,
        "**/sandbox/**": true,
        "external/Logos_AGI/.venv/**": true
    },
    // Rocq/Coq LSP Configuration
    "coqtop.binPath": "/home/codespace/.opam/rocq/bin/coqtop",
    "vscoq.path": "/home/codespace/.opam/rocq/bin/",
    "rocq.path": "/home/codespace/.opam/rocq/bin/",
    
    // Performance optimizations to reduce memory/CPU pressure
    "files.autoSave": "onFocusChange",
    "editor.formatOnSave": false,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "explorer.autoReveal": false,
    "explorer.expandToOpenFile": false,
    "workbench.list.openMode": "singleClick",
    
    // Reduce TypeScript/JavaScript overhead (not needed for this Coq/Python project)
    "typescript.tsserver.maxTsServerMemory": 512,
    "typescript.surveys.enabled": false,
    "javascript.suggest.enabled": false,
    "typescript.suggest.enabled": false,
    
    // Reduce Git overhead
    "git.autoRefresh": false,
    "git.autofetch": false,
    "git.decorations.enabled": true,
    
    // Limit terminal scrollback
    "terminal.integrated.scrollback": 1000,
    
    // Disable unnecessary features
    "telemetry.telemetryLevel": "off",
    "workbench.enableExperiments": false,
    "workbench.tree.expandOnHover": false,
    "workbench.tree.expandOnDragAndDrop": false,
    
    // Python optimizations
    "python.analysis.memory.keepLibraryAst": false,
    "python.analysis.autoImportCompletions": false,
    "python.defaultInterpreterPath": "/workspaces/pxl_demo_wcoq_proofs/.venv/bin/python",
    "python.linting.enabled": true,
    "python.linting.ruffEnabled": true,
    "python.formatting.provider": "ruff",

    // Custom dictionary entries
    "cSpell.words": [
        "axiomatized",
        "CODEOWNERS",
        "elim",
        "forall",
        "GAPFILL",
        "gapfiller",
        "gapfillers",
        "Groq",
        "groundens",
        "Hback",
        "ingestor",
        "irrefl",
        "mequiv",
        "noncontradiction",
        "nonequiv",
        "outpath",
        "Protopraxic",
        "Protopraxis",
        "symm",
        "testpy",
        "unentailed",
        "wcoq"
    ],
    "python.analysis.extraPaths": [
        "./external",
        "./logos"
    ],
    "outline.collapseItems": "alwaysCollapse",
    "python.analysis.typeCheckingMode": "strict",
    "coq-lsp.check_only_on_request": false
}